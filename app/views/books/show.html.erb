<div>
  <%= flash[:notice] %>
</div>

<%= render 'books/userinfo',user: @book.user,book: Book.new %>

<div>
<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <td><%= image_tag @book.user.get_profile_image(100,100) %></br>
          <%= link_to @book.user.name,book_path(@book.id) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
     <% if @book.user == current_user %>
      <td><%=link_to "Edit",edit_book_path(@book) %></td>
      <td><%=link_to "Destroy",book_path(@book),method: :delete,"data-confirm" => "本当に消しますか？"%></td>
     <% end %>
    </tr>
  </thead>
</table>
</div>