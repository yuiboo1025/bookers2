
<div class="container">
 <div class="row">

<%= render 'books/userinfo',user: @book.user,book: Book.new %>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">
    <tr>
      <td><%= image_tag @book.user.get_profile_image(100,100) %></br>
          <%= link_to @book.user.name,user_path(@book.user_id) %></td>
      <td><%= link_to @book.title,books_path(@book.id) %></td>
      <td><%= @book.body %></td>
     <% if @book.user == current_user %>
      <td><%=link_to 'Edit',edit_book_path(@book), class: "btn btn-success" %></td>
      <td><%=link_to 'Destroy',book_path(@book), class: "btn btn-danger",method: :delete,"data-confirm" => "本当に消しますか？"%></td>
     <% end %>
    </tr>
</table>
</div>

 </div>
</div>
