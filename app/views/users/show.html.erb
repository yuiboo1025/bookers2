<div>
  <%= flash[:notice] %>
</div>

<%= render 'books/userinfo',user: @user,book: Book.new %>

<div>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
    <tr>
       <td><%= image_tag @user.get_profile_image(100,100) %></td>
       <td><%= link_to book.title,book_path(book.id)%></td>
       <td><%= book.body %></td>
    </tr> 
    <% end %>
   </tbody>
  </table>
</div>
