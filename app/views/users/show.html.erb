

<div class="container">
 <div class="row">

<%= render 'books/userinfo',user: @user,book: Book.new %>

<div class="col-md-8 offset-md-1">
<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
    <tr>
       <td><%= link_to image_tag(@user.get_profile_image(100,100)), user_path(@user.id) %></td>
       <td><%= link_to book.title,book_path(book.id)%></td>
       <td><%= book.body %></td>
    </tr>
    <% end %>
   </tbody>
  </table>
</div>

 </div>
</div>

